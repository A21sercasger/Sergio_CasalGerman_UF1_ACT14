<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/square_lightblue"
            android:layout_width="240dp"
            android:layout_height="74dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="0dp"
            android:layout_toLeftOf="@id/square_lightpink2"
            android:background="#A3D8F4" />

        <View
            android:id="@+id/square_lightpink2"
            android:layout_width="82dp"
            android:layout_height="79dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="#F6A5C0" />


        <View
            android:id="@+id/rectangle_lightgreen"
            android:layout_width="match_parent"
            android:layout_height="363dp"
            android:layout_below="@id/square_lightblue"
            android:background="#B8E6C6" />


        <View
            android:id="@+id/square_lightcoral"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rectangle_lightgreen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#FFB5A7" />


        <View
            android:id="@+id/square_lightyellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/square_lightcoral"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@id/square_lightcoral"
            android:background="#F9E79F" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>